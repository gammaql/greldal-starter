{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2017",
        "module": "commonjs",
        "lib": ["es2015", "es2016", "es2017", "dom", "esnext.asynciterable"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "build",
        "outDir": "build",
        "esModuleInterop": true,
        "noEmit": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/__fixtures__/**/*",
        "src/__snapshots__/**/*",
    ]
}
